{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": ".build",
    "target": "es2020",
    "lib": ["es2020", "es6"],
    "rootDir": "src",
    "resolveJsonModule": true,
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "moduleResolution":"node",
  },
}
